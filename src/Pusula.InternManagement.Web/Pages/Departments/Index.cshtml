@page
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.Localization;
@using Pusula.InternManagement.Localization;
@using Pusula.InternManagement.Permissions;
@model Pusula.InternManagement.Web.Pages.Departments.IndexModel
@inject IStringLocalizer<InternManagementResource> L
@inject IAuthorizationService AuthorizationService
@section scripts{
    <abp-script src="/Pages/Departments/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Departments"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(InternManagementPermissions.Departments.Create))
                {
                    <abp-button id="NewDepartmentButton"
                            text="@L["NewDepartment"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="DepartmentsTable"></abp-table>
    </abp-card-body>
</abp-card>
